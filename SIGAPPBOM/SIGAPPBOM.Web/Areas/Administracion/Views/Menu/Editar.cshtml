@model SIGAPPBOM.Servicio.ViewModels.MenuViewModel
@{ 
    Html.EnableClientValidation(true);
    
}
@using (Html.BeginForm("Editar", "Menu"))
{
    <script src="@Url.Content("~/Scripts/jquery-customvalidation.js")" type="text/javascript"></script>  
    @Html.ValidationSummary(true)

    <div class="container">
        <div class="block">
            <div class="block_head">
                <div class="bheadl">
                </div>
                <div class="bheadr">
                </div>
                <h2>@ViewBag.Titulo
                </h2>
                <a class="pull-right linksInTitle" href="@Url.Action("MostrarMenu", "Menu")">
                << Menues</a>
            </div>
            <div class="block_content">
                <!--ini cabecera-->
                <div class="row" style="margin-left: 20px">
                    <div class="span10">
                        <p>
                            &nbsp;</p>
                        <div class="control-group">
                            <label class="control-label" for="inputIcon">Titulo</label>
                            <div class="controls">
                            <div class="input-prepend">
                            <span class="add-on"><i class="icon-font"></i></span><input class="span4" id="inputIcon" type="text" value=@Model.Titulo />
                            </div>
                            </div>

                            <label class="control-label" for="inputIcon">Controlador</label>
                            <div class="controls">
                            <div class="input-prepend">
                            <span class="add-on"><i class="icon-folder-open"></i></span><input class="span4" id="inputIcon2" type="text" value=@Model.Controlador />
                            </div>
                            </div>

                            <label class="control-label" for="inputIcon">Accion</label>
                            <div class="controls">
                            <div class="input-prepend">
                            <span class="add-on"><i class="icon-cog"></i></span><input class="span4" id="inputIcon3" type="text" value=@Model.Accion />
                            </div>
                            </div>

                            <label class="control-label" for="inputIcon">Imagen</label>
                            <div class="controls">
                            <div class="input-prepend">
                            <span class="add-on"><i class="icon-picture"></i></span><input class="span4" id="inputIcon4" type="text" value=@Model.Imagen />
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--fin cabecera-->
                
                <div class="bendl">
                </div>
                <div class="bendr">
                </div>
                <div class="form-actions">
                    <a id="btnGrabar" class="btn btn-primary" href="#"><i class="icon-ok icon-white"></i>
                        Grabar</a>
                    <input id="SendForm" class="btn btn-primary" type="submit" value="enviar" style="visibility: hidden" />
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function GenerarDetalles() {
        $("#hiddens").html("");
        var itemHidden = '<input type="hidden" name="Titulo" value="' + $("#inputIcon").val() + '" /> ';
        itemHidden += '<input type="hidden" name="Controlador" value="' + $("#inputIcon2").val() + '" /> ';
        itemHidden += '<input type="hidden" name="Accion" value="' + $("#inputIcon3").val() + '" /> ';
        itemHidden += '<input type="hidden" name="Imagen" value="' + $("#inputIcon4").val() + '" /> ';
        $("#hiddens").append(itemHidden);
    }
    $("#btnGrabar").click(function () {
        GenerarDetalles();
        $("#SendForm").click();
    })
</script>

