@model SIGAPPBOM.Servicio.ViewModels.ParcelaViewModel
@{ 
    Html.EnableClientValidation(true);
    
}
@using (Html.BeginForm("Nuevo", "Parcela"))
{
    <script src="@Url.Content("~/Scripts/jquery-customvalidation.js")" type="text/javascript"></script>  
    @Html.ValidationSummary(true)

    <div class="container">
        <div class="block">
            <div class="block_head">
                <div class="bheadl">
                </div>
                <div class="bheadr">
                </div>
                <h2>@ViewBag.Titulo
                </h2>
                <a class="pull-right linksInTitle" href="@Url.Action("MostrarParcela", "Parcela")">
                << Parcelas</a>
            </div>
            <div class="block_content">
                <!--ini cabecera-->
                <div class="row" style="margin-left: 20px">
                    <div class="span10">
                        <p>
                            &nbsp;</p>
                       
                        <div class="control-group">
                        <label class="control-label" for="inputIcon">Sector</label>
                        <div class="controls">
                        <div class="input-prepend">
                        <span class="add-on"><i class="icon-picture"></i></span><input class="span4" id="inputIcon" type="text" />
                        </div>
                        </div>

                        <label class="control-label" for="inputIcon">Tamaño</label>
                        <div class="controls">
                        <div class="input-prepend">
                        <span class="add-on"><i class="icon-text-width"></i></span><input class="span4" id="inputIcon2" type="text" />
                        </div>
                        </div>

                        <label class="control-label" for="inputIcon">Productor</label>
                        <div class="controls">
                        <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span><input class="span4" id="inputIcon3" type="text" />
                        </div>
                        </div>


                        </div>
                        
                    </div>
                </div>
                <!--fin cabecera-->
                
                <!--Ini "Inputs hidden Detalles"-->
                <div id="hiddens">
                </div>
                <!--End "Inputs hidden Detalles"-->
                <div class="bendl">
                </div>
                <div class="bendr">
                </div>
                <div class="form-actions">
                    <a id="btnGrabar" class="btn btn-primary" href="#"><i class="icon-ok icon-white"></i>
                        Grabar</a>
                    <input id="SendForm" class="btn btn-primary" type="submit" value="enviar" style="visibility: hidden" />
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
function GenerarDetalles() {
    $("#hiddens").html("");
    var itemHidden = '<input type="hidden" name="Sector" value="' + $("#inputIcon").val() + '" /> ';
    itemHidden += '<input type="hidden" name="Tamaño" value="' + $("#inputIcon2").val() + '" /> ';
    itemHidden += '<input type="hidden" name="IdProductor" value="' + $("#inputIcon3").val() + '" /> ';
    $("#hiddens").append(itemHidden);
    }



$("#btnGrabar").click(function () {
    GenerarDetalles();
    $("#SendForm").click();  
    })
</script>
