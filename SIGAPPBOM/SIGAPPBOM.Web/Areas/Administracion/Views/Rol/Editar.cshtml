@model SIGAPPBOM.Servicio.ViewModels.RolViewModel
@{ 
    Html.EnableClientValidation(true);
    
}
@using (Html.BeginForm("Editar", "Rol"))
{
    <script src="@Url.Content("~/Scripts/jquery-customvalidation.js")" type="text/javascript"></script>  
    @Html.ValidationSummary(true)

    <div class="container">
        <div class="block">
            <div class="block_head">
                <div class="bheadl">
                </div>
                <div class="bheadr">
                </div>
                <h2>@ViewBag.Titulo
                </h2>
                <a class="pull-right linksInTitle" href="@Url.Action("MostrarRol", "Rol")">
                << Personas</a>
            </div>
            <div class="block_content">
                <!--ini cabecera-->
                <div class="row" style="margin-left: 20px">
                    <div class="span10">
                        <p>
                            &nbsp;</p>
                         <div class="control-group">
                                <label class="control-label" for="inputIcon">Sector</label>
                                <div class="controls">
                                <div class="input-prepend">
                                <span class="add-on"><i class="icon-font"></i></span><input class="span4" id="inputIcon" type="text" value=@Model.Nombre />
                                </div>
                                </div>

                        </div>
                    </div>
                </div>
                <!--fin cabecera-->
                 <!--Ini "Inputs hidden Detalles"-->
                <div id="hiddens">
                </div>
                <!--End "Inputs hidden Detalles"-->
                <div class="bendl">
                </div>
                <div class="bendr">
                </div>
                <div class="form-actions">
                    <a id="btnGrabar" class="btn btn-primary" href="#"><i class="icon-ok icon-white"></i>
                        Grabar</a>
                    <input id="SendForm" class="btn btn-primary" type="submit" value="enviar" style="visibility: hidden" />
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function GenerarDetalles() {
        $("#hiddens").html("");
        var itemHidden = '<input type="hidden" name="Nombre" value="' + $("#inputIcon").val() + '" /> ';
        alert(itemHidden);
    }
    $("#btnGrabar").click(function () {
        GenerarDetalles();
        $("#SendForm").click();
    })
</script>
